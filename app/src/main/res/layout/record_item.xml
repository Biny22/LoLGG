<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recordItem"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="#B9BABC">

    <ImageView
        android:id="@+id/championImgView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginTop="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/spellImgView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/championImgView"
        app:layout_constraintTop_toBottomOf="@+id/spellImgView1"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/gameMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="무작위 총력전"
        app:layout_constraintStart_toEndOf="@+id/kda"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/killRate"
        android:layout_width="81dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="킬 관여율"
        app:layout_constraintStart_toEndOf="@+id/perksSubStyleImgView"
        app:layout_constraintTop_toBottomOf="@+id/kda" />

    <TextView
        android:id="@+id/kda"
        android:layout_width="112dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:text="100/100/100"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/perksPrimaryStyleImgView"
        tools:layout_editor_absoluteY="10dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="79dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="3월 1일"
        app:layout_constraintStart_toEndOf="@+id/kda"
        app:layout_constraintTop_toBottomOf="@+id/gameMode" />

    <ImageView
        android:id="@+id/perksSubStyleImgView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/spellImgView2"
        app:layout_constraintTop_toBottomOf="@+id/perksPrimaryStyleImgView"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/perksPrimaryStyleImgView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/spellImgView1"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/spellImgView1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/championImgView"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/itemImgView1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/itemImgView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/itemImgView1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginStart="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/itemImgView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/itemImgView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginStart="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/itemImgView7"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/itemImgView6"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginStart="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/itemImgView4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/itemImgView3"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginStart="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/itemImgView5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/itemImgView4"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginStart="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/itemImgView6"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/itemImgView5"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginStart="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="55dp"
        android:layout_height="105dp"
        android:background="#4CAFDC"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="승리" />

        <TextView
            android:id="@+id/period"
            android:layout_width="57dp"
            android:layout_height="24dp"
            android:text="17분 15초" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>