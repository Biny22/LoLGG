<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tierItem"
    android:layout_width="300dp"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/tierImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:srcCompat="@tools:sample/avatars"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/rankType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="랭크 타입"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/tierImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tierName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:text="unranked"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/tierImageView"
        app:layout_constraintTop_toBottomOf="@+id/rankType" />

    <TextView
        android:id="@+id/leaguePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:text="0LP"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tierImageView"
        app:layout_constraintTop_toBottomOf="@+id/tierName" />

    <TextView
        android:id="@+id/rankOdds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:text="0승 0패 (0%)"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/tierImageView"
        app:layout_constraintTop_toBottomOf="@+id/leaguePoint" />
</androidx.constraintlayout.widget.ConstraintLayout>